{
    "name": "nextcloud/twofactor_admin",
    "description": "Nextcloud Two-Factor Authentication Admin Provider",
    "type": "library",
    "license": "AGPL-v3",
    "authors": [
        {
            "name": "Christoph Wurst",
            "email": "christoph@winzerhof-wurst.at"
        }
    ],
    "config": {
        "platform": {
            "php": "7.2"
        },
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "scripts": {
        "test": "phpunit -c tests/phpunit.xml",
        "test:acceptance": "phpunit -c tests/phpunit.xml tests/Acceptance",
        "test:unit": "phpunit -c tests/phpunit.xml tests/Unit",
        "test:acceptance:dev": "phpunit -c tests/phpunit.xml tests/Acceptance --no-coverage",
        "test:unit:dev": "phpunit -c tests/phpunit.xml tests/Unit --no-coverage",
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all update --ansi"
		]
	},
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.5"
    }
}
